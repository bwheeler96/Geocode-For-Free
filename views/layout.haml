%html
  %head
    %link(href="/assets/css/bootstrap.min.css" type="text/css" rel="stylesheet")
    %title Geocode For Free
    %link{ href: '/favicon.ico', rel: 'SHORTCUT ICON' }
    %script{ href: '/assets/js/bootstrap.min.js', type: 'text/javascript' }
    %script{ href: '/assets/js/ujs.js', type: 'text/javascript' }

  %body

    .container
      %nav.navbar.navbar-default{ role: 'navigation' }
        .navbar-header
          %a.navbar-brand{ href: '/' }
            Geocode For Free
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              %a{ href: '/v1/docs' }
                API Docs

      - if params[:success]
        .alert.alert-success
          = params[:success]
      - if params[:alert]
        .alert.alert-danger
          = params[:alert]
      = yield
